<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="stylesheets/style.css" />
  </head>

  <body>
    <div class="side-nav-bar">
      <div class="logo">
        <img
          src="images/logo.png"
          alt="logo"
          style="width: 60px; height: 70px"
        />
        <p class="side-nav-text">Smart Wallet</p>
      </div>

      <div class="menu">

        <!-- deposit -->
        <div class="menu-item">
          <img src="images/deposit.png" alt="deposit" />
          <p class="side-nav-text side-nav-menu-text">Deposit</p>
        </div>

        <!-- withdraw -->
        <div class="menu-item">
          <img src="images/withdraw.png" alt="withdraw" />
          <p class="side-nav-text side-nav-menu-text">Withdraw</p>
        </div>

        <!-- transfer -->
        <div class="menu-item">
          <img src="images/transfer.png" alt="transfer" />
          <p class="side-nav-text side-nav-menu-text">Transfer</p>
        </div>

        <!-- buy phone card -->
        <div class="menu-item">
          <img src="images/phonecard.png" alt="phonecard" />
          <p class="side-nav-text side-nav-menu-text">Buy phone card</p>
        </div>

        <!-- transaction -->
        <div class="menu-item">
          <img src="images/transaction.png" alt="transaction" />
          <p class="side-nav-text side-nav-menu-text">Transaction</p>
        </div>
      </div>
    </div>
    <div class="main">
      <header>
        <nav class="nav-bar">
          <div
            class="container hamburger change"
            onclick="SideNavControl(this);"
          >
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
          </div>
          <div>

          </div>
        </nav>
      </header>

      <div class="content-holder">

        {{{body}}}
    </div>

    <script src="/javascripts/main.js"></script>

  </body>

</html>